{
  "extends": [ "@pwrs" ],
  "rules": {
    "@typescript-eslint/ban-ts-comment": ["warn", {
      "ts-expect-error": "allow-with-description",
      "ts-ignore": "allow-with-description"
    }]
  },
  "overrides": [{
    "files": ["*.test.ts"],
    "rules": {
      "@typescript-eslint/no-unused-vars": ["warn", { "varsIgnorePattern": "TypeCheck"} ]
    }
  }, {
    "files": [
      "husky.config.js",
      "commitlint.config.js"
    ],
    "env": {
      "node": true
    }
  }, {
    "files": [
      "scripts/*"
    ],
    "rules": {
      "no-console": "off"
    }
  }]
}